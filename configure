#!/bin/bash

## $# $@ $* $0 $1 $2

## ./configure create | update -name libfoxintango -path path-to-libfoxintango -type lib|bin -arch=

#for arg in $@
#do
#    echo $arg
#done

index=1

function findParam () {
    i=2
    echo $2
    while [ $i -le $# ]
    do
        if [ $( expr match $i $1 ) -ge 0 ];then
            echo "expr ok."
            return $i
        fi
        let i=i+1
    done

    return 0
}

function createProject() {
    echo "create new project."
    findParam "name" $@
    paramFound=$? - 1
    paramName=$paramFound
    echo param : $paramName
    echo ${paramName%:*}
    echo ${paramName#*:}
}

function updateProject() {
     echo "update old project."
}

while [ $index -le $# ]
do

    if   [ "create" == ${!index} ];then
            createProject $@
    elif [ "update" == ${!index} ];then
            updateProject $@
    fi
    let index=index+1
done
